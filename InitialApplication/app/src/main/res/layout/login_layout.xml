<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.utkarsh.loginsignup.MainActivity"
    android:background="#E9E9E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

    <ImageView android:src="@drawable/welcome_page"
        android:layout_width="524dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />
    <ImageView android:src="@drawable/googleicon"
        android:layout_width="297dp"
        android:layout_height="67dp"
        android:layout_weight="1"
        android:layout_marginBottom="1dp"
        android:layout_gravity="center_horizontal" />
    <ImageView android:src="@drawable/fbconmin"
        android:layout_width="297dp"
        android:layout_height="67dp"
        android:layout_weight="1"
        android:layout_marginBottom="1dp"
        android:layout_gravity="center_horizontal" />
    <ImageView android:src="@drawable/loginicon"
        android:layout_width="297dp"
        android:layout_height="67dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center_horizontal" />




</LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:id="@+id/signup"
        android:layout_alignParentBottom="true"
        android:background="#E14320"
        android:textColor="#ffffff" />
</RelativeLayout>
